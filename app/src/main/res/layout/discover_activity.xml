<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DiscoverActivity">

    <fragment
        android:id="@+id/discover_fragment_search"
        android:name="com.alvaromoran.podcasts.ui.discover.DiscoverSearchFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_discover_search"
        android:layout_weight="9"/>

    <fragment
        android:id="@+id/discover_fragment_results"
        android:name="com.alvaromoran.podcasts.ui.discover.DiscoverResultsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_discover_results"
        android:layout_weight="2"/>


</LinearLayout>