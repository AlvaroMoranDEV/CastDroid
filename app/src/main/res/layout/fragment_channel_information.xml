<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ChannelInformationFragment">

    <ImageView
        android:id="@+id/mainChannelImage"
        android:layout_width="@dimen/channel_page_image"
        android:layout_height="@dimen/channel_page_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:contentDescription="@string/description_placeholder"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/mainChannelTitle"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/mainChannelImage"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_toEndOf="@+id/mainChannelImage"
        android:gravity="center"
        android:textAppearance="@style/TextCardTitle"
        android:textColor="#000" />

    <TextView
        android:id="@+id/mainChannelAuthor"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@+id/mainChannelTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_toEndOf="@+id/mainChannelImage"
        android:layout_marginStart="@dimen/default_margin"
        android:gravity="center"
        android:textAppearance="@style/TextCardTitle"
        android:textColor="#000" />

    <TextView
        android:id="@+id/mainChannelCopyright"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@+id/mainChannelAuthor"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_toEndOf="@+id/mainChannelImage"
        android:layout_marginStart="@dimen/default_margin"
        android:gravity="center"
        android:textAppearance="@style/TextCardTitle"
        android:textColor="#000" />

    <TextView
        android:id="@+id/mainChannelCategories"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@+id/mainChannelCopyright"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_toEndOf="@+id/mainChannelImage"
        android:layout_marginStart="@dimen/default_margin"
        android:gravity="center"
        android:textAppearance="@style/TextCardTitle"
        android:textColor="#000" />

    <TextView
        android:id="@+id/mainChannelDescription"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/mainChannelImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:textAppearance="@style/TextCardTitle"
        android:textColor="#000" />

    <ListView
        android:id="@+id/mainEpisodesList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainChannelDescription"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        />

</RelativeLayout>